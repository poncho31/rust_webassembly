# =============================================================================
# CONFIGURATION D'ENVIRONNEMENT - WebAssembly Unified Frontend/Backend
# FICHIER D'EXEMPLE - Copiez ce fichier vers .env et adaptez les valeurs
# =============================================================================

# =============================================================================
# MODE DE DÉPLOIEMENT
# =============================================================================
# Cette variable détermine si l'application s'exécute en mode local ou Docker
# Valeurs possibles: local, docker
DEPLOYMENT_MODE=local

# =============================================================================
# ENVIRONNEMENT GÉNÉRAL
# =============================================================================
ENVIRONMENT=development

# =============================================================================
# BASE DE DONNÉES POSTGRESQL
# =============================================================================

# --- Configuration commune ---
PG_USER=your_username
PG_PASSWORD=your_password
PG_DATABASE=your_database_name

# --- Configuration locale ---
PG_HOST=localhost
PG_PORT=5432
DATABASE_URL=postgres://your_username:your_password@localhost:5432/your_database_name

# --- Configuration Docker ---
PG_HOST_DOCKER=db
PG_PORT_DOCKER=5433
DATABASE_URL_DOCKER=postgres://your_username:your_password@db:5432/your_database_name

# =============================================================================
# SERVEUR WEB
# =============================================================================

# --- Configuration locale ---
SERVER_HOST=127.0.0.1
SERVER_PORT=8088

# --- Configuration Docker ---
SERVER_HOST_DOCKER=0.0.0.0
SERVER_PORT_DOCKER=8090

# --- Configuration générale ---
HTML_INDEX=index.html

# =============================================================================
# CORS ET ORIGINS
# =============================================================================
ALLOWED_ORIGIN=https://localhost:8088
ALLOWED_ORIGIN_DOCKER=https://localhost:8090

# =============================================================================
# PERFORMANCE ET WORKERS
# =============================================================================
SERVER_WORKERS=1
SERVER_WORKERS_DOCKER=4
MAX_CONNECTIONS=1000

# =============================================================================
# SÉCURITÉ ET SSL
# =============================================================================
SSL_ENABLED=true
SECURITY_HEADERS=true

# =============================================================================
# FONCTIONNALITÉS OPTIONNELLES
# =============================================================================
COMPRESSION_ENABLED=true
FILE_CACHING=true
REQUEST_LOGGING=true

# =============================================================================
# EXEMPLES ET TESTS
# =============================================================================
EXAMPLE_TEXT=Hello, World!
